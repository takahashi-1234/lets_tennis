<div class="container">
  <div class="common-parts-info bg-light">
    <table class="table table-hover w-100 small">
      <thead>
        <td class="col-lg-1">項番</td>
        <td class="col-lg-3">名前</td>
        <td class="col-lg-4">アドレス</td>
        <td class="col-lg-1"><%= sort_link(@q,:is_quited)%></td>
        <td class="col-lg-3">変更</td>
      </thead>
      <% @customers.each_with_index do |customer,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <% if customer.is_quited %>
          <td>無効</td>
          <td><%= link_to "有効に戻す",admin_customer_path(customer.id),method: :patch,class:"btn btn-success btn-sm" %></td>
        <% else %>
          <td>有効</td>
          <td><%= link_to "無効にする",admin_customer_path(customer.id),method: :patch,class:"btn btn-primary btn-sm" %></td>
        <% end %>
      </tr>
      <% end %>
    </table>
    <%= paginate @customers %>
  </div>
</div>