<%= render "public/courts/court_map",courts:@courts,q:@q %>
<script>
  let map;
  let marker=[];
  let infoWindow=[];
  const courts=gon.favorite_courts;
  function initMap(){
    geocoder=new google.maps.Geocoder()
    map=new google.maps.Map(document.getElementById("map"),{
      zoom:10,
      center:{lat:35.6585,lng:139.7486 },
      mapId:"1b786f15acc7b7be"
    });
    
    //登録済みマーカーを表示
    //for文で配列化したコートを抽出する
    for(let i=0;i<courts.length;i++){
      //コートの座標
      markerLatLng=new google.maps.LatLng({
        lat:courts[i]["latitude"],
        lng:courts[i]["longitude"]
      });
      //マーカーの設定
      marker[i]=new google.maps.Marker({
        position:markerLatLng,
        map:map
      })
      //情報窓の設定
      infoWindow[i]=new google.maps.InfoWindow({
        content:courts[i]["address"],
      });
      marker[i].addListener('click',function(){
        infoWindow[i].open(map,marker[i]);
      });
    }
  }
  function codeAddress(){
    let inputAddress=document.getElementById('address').value;
    geocoder.geocode({'address':inputAddress},function(results,status){
      if(status=='OK'){
        map.setCenter(results[0].geometry.location);
      }else{
        alert('Geocode was not successful for the following reason: ' + status);
      }
    });
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>