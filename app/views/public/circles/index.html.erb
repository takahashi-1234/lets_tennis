<div class="container">
  <div class="common-parts-info bg-light">
    <table class="table w-100 small">
      <thead>
        <td class="col-lg-3">サークル名</td>
        <td class="col-lg-2"><%= sort_link(@q,:level)%></td>
        <td class="col-lg-4">紹介</td>
        <td class="col-lg-3">活動場所</td>
      </thead>
      <% @circles.each do |circle| %>
      <tr>
        <td><%= link_to circle_path(circle.id) do %><%= circle.circle_name %><% end %></td>
        <td><%= circle.level %></td>
        <td class="text-truncate"><%= circle.body %></td>
        <td><%= link_to court_path(circle.court.id) do %><%= circle.court.name %><% end %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @circles %>
  </div>
</div>