<%= form_with model:@chat,url:circle_chats_path(@circle.id),method: :post do |f| %>
  <%= f.text_field:message %>
  <%= f.hidden_field:room_id %>
  <%= f.submit "送信" %>
<% end %>

<table>
  <thead>
    <th>投稿者名</th>
    <th>投稿内容</th>
  </thead>
  <% @chats.each do |chat| %>
    <tr>
      <% if chat.customer.circles.include?(@circle) %>
        <td><%= @circle.circle_name %></td>
      <% else %>
        <td><%= chat.customer.name %></td>
      <% end %>
      <td><%= chat.message %></td>
    </tr>
  <% end %>
</table>