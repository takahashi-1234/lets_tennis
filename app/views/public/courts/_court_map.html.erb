<div class="main-content">
  <div class="court_content shadow-sm p-2 small bg-light">
    <div class="my-2">
      <%= search_form_for q do |f| %>
        <%= f.search_field:name_cont,placeholder:"名称で検索",class:"rounded" %>
        <%= f.search_field:address_cont,placeholder:"住所で検索",class:"rounded" %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
    <table class="table">
      <% courts.each do |court| %>
      <tr>
        <td class="col-lg-5"><%= link_to court_path(court.id) do %><%= court.name %><% end %></td>
        <td class="col-lg-7"><%= court.address[12..100] %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div id="map"></div>
</div>